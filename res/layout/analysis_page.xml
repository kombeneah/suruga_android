<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AnalysisRelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    
    <RelativeLayout
        android:id="@+id/headerInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/preBudgetHeader"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:text="Savings" />

        <TextView
            android:id="@+id/postBudgetHeader"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/preBudgetHeader"
            android:gravity="center"
            android:text="Monthly"
            android:layout_marginRight="15dp"
            android:textColor="@android:color/black" />

    </RelativeLayout>
    
    <ListView
        android:id="@+id/analysisItemList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/headerInfo"
        android:layout_marginTop="10dp"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp" >

    </ListView>

</RelativeLayout>
