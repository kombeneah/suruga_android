<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white" >

    <!-- Screen Design for Photos -->

    <EditText
        android:id="@+id/welcomeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/contentTextView"
        android:layout_alignRight="@+id/headerTextView"
        android:layout_below="@+id/contentTextView"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="@string/passcodeEntryHint"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@null" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:text="@string/codeEntryInstructions"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="@string/welcome"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/passCodeOK"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignBottom="@+id/welcomeEditText"
        android:layout_alignTop="@+id/welcomeEditText"
        android:layout_toRightOf="@+id/welcomeEditText"
        android:src="@drawable/unaffordable" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/contentTextView"
        android:layout_marginBottom="15dp"
        android:text="@string/next" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nextButton"
        android:layout_alignLeft="@+id/welcomeEditText"
        android:text="@string/back" />

</RelativeLayout>
